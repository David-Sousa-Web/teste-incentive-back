// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pagamentos {
  id        String @id @default(uuid())
  Nome      String
  Descricao String
  Valor     Int
  Saldo     Saldos @relation(fields: [saldoId], references: [id])
  saldoId   String
}

model Saldos {
  id            String       @id @default(uuid())
  Nome          String
  Descricao     String
  ValorInicial  Int
  ValorRestante Int
  Pagamentos    Pagamentos[]
}
